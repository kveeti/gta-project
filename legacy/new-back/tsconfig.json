{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2019"],
    "outDir": "./ts-out",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
  }
}
